<!-- 自定义顶部栏 -->
<navbar isBack="{{true}}" bgColor="bg-nav"><view slot="content">注册</view></navbar>
<!-- 标题 -->
<view class="cu-bar">
  <text class='title'>手机号登录</text>
</view>
<!-- 手机号输入框 -->
<view class='phone'>
  <input class='phone-number' type='number' maxlength='11' auto-focus placeholder='输入手机号' placeholder-style="color: #C7C7CC;" bindinput="bindChangePhone"></input>
  <text class="phone-code" bindtap='getCode' style="color:{{isColor?'#0099FF':'#C8C7CD'}};" wx:if="{{isCode}}">获取验证码</text>
  <text class="review-code" wx:else>{{ count }}s重新获取</text>
</view>
<!-- 验证码输入框 -->
<view class='code'>
  <input class='phone-number' type='number' maxlength='6' auto-focus placeholder='输入验证码' placeholder-style="color: #C7C7CC;" bindinput="bindChangeCode"></input>
</view>
<!-- 注册按钮 -->
<view class='login-btn'>
  <button class="btn {{ isCodes ? 'disabled' : ''}}" bindtap='toIndex'>注册</button>
</view>
<text class='footer-title'>欢迎登录家有马管家服务</text>