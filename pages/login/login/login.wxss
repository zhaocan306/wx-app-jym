/* pages/login/login/login.wxss */
.title {
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  margin-left: 60rpx;
  margin-top: 82rpx;
}
.phone,.code input {
  caret-color:#0099FF!important;
}
.phone {
  margin:184rpx 30rpx 0 30rpx;
  padding:20rpx 30rpx;
  display:flex;
  align-content:space-between;
  border-bottom:1rpx solid #F4F4F4;
  box-sizing:border-box;
}
.phone-number {
  color: #000000;
  font-size: 32rpx;
  flex: 1;
}
.phone .phone-code {
  color: #C8C7CD;
  width: 160rpx;
  font-size: 32rpx;
}
.phone .review-code {
  color: #0099FF;
  width: 180rpx;
  font-size: 32rpx;
}
.code {
  padding:20rpx 30rpx;
  display:flex;
  align-content:space-between;
  border-bottom:1rpx solid #F4F4F4;
  box-sizing:border-box;
  margin: 60rpx 30rpx 0 30rpx;
}
.login-btn {
  margin-top: 322rpx;
}
.login-btn .btn {
  width:466rpx;
  height:88rpx;
  background: linear-gradient(to right, #0099FF, #3642FF);
  color:#fff;
  font-family:PingFangSC-Regular;
  font-size:30rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius: 12rpx;
}
.disabled {
  opacity: 0.2;
}