/* 注册标题 */
.login-title {
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #000000;
  margin-left: 60rpx;
  margin-top: 82rpx;
}
/* 输入框 */
.phone {
  margin:184rpx 30rpx 0 30rpx;
  padding:20rpx 30rpx;
  display:flex;
  align-content:space-between;
  border-bottom:1rpx solid #F4F4F4;
}
.phone .phone-number {
  color: #000000;
  font-size: 32rpx;
  flex: 1;
}
.phone .phone-code {
  color: #C8C7CD;
  width: 160rpx;
  font-size: 32rpx;
}
.phone .review-code {
  color: #0099FF;
  width: 180rpx;
  font-size: 32rpx;
}
.code {
  padding:20rpx 30rpx;
  display:flex;
  align-content:space-between;
  border-bottom:1rpx solid #F4F4F4;
  box-sizing:border-box;
  margin: 60rpx 30rpx 0 30rpx;
}
.login-btn {
  margin-top: 322rpx;
}