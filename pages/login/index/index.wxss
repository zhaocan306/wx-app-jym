.login {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
}
/* 登录背景图 */
.bg-login {
  width: 100%;
  height: 784rpx;
}
/* 登录卡片 */
.cu-login {
  width: 548rpx;
  height: 700rpx;
  position: absolute;
  margin-top: 150rpx;
  left: 50%;
  margin-left: -274rpx;
  box-shadow: 0 2rpx 24rpx 0 rgba(37,93,255,0.10);
  background: #fff;
  border-radius: 16rpx;
}
.cu-login image {
  width: 280rpx;
  height: 280rpx;
  margin: 68rpx 0 56rpx 134rpx;
}
.cu-login .login-btn {
  width:466rpx;
  height:88rpx;
  color:#fff;
  background:linear-gradient(to right, #0099FF, #3642FF);
  font-size:30rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.cu-login .login-text {
  display: block;
  text-align: center;
  font-size:30rpx;
  color:#8F8E94;
  margin-top:60rpx;
}