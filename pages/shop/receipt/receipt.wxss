/* pages/shop/receipt/receipt.wxss */
.receipt {
  width: 100%;
  height: 100%;
  position: relative;
  min-height: 100rpx;
  display: flex;
  flex-direction: column;
}
.receipt .title {
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #333333;
  text-align: center;
  font-weight:600;
  border-bottom:1rpx dashed #333333;
  padding-bottom:24rpx;
  margin:0 30rpx;
  display:block;
}
.receipt .time {
  font-size: 28rpx;
  color: #6E6E6E;
  text-align: center;
  padding-top: 12rpx;
  padding-bottom: 24rpx;
  display: block;
}
.receipt .good {
  height: 100%;
  margin: 0 30rpx;
  border-bottom:1rpx dashed #333333;
}
.receipt .good .head {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.receipt .good .head text {
  font-size: 28rpx;
  color: #6E6E6E;
  width: 25%;
}
.receipt .good .item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.receipt .good .item:nth-child(2) {
  padding-top: 12rpx;
}
.receipt .good .item:not(:nth-child(2)) {
  padding-top: 60rpx;
}
.receipt .good .item:last-child {
  padding-bottom: 48rpx;
}
.receipt .good .item text {
  width: 25%;
}
.middle {
  text-align: center;
}
.right {
  text-align: right;
}
.receipt .price {
  display: flex;
  margin: 0 30rpx;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 32rpx;
}
.receipt .price text {
  font-size: 32rpx;
  color: #333333;
}
.range {
  padding-top: 24rpx;
}
.receipt .remarks {
  margin: 0 30rpx;
  display: flex;
  padding-bottom: 48rpx;
  border-bottom:1rpx dashed #333333;
}
.receipt .remarks .label {
  font-size: 32rpx;
  color: #333333;
}
.receipt .remarks .content {
  font-size: 32rpx;
  color: #696969;
  padding-left: 94rpx;
}
.receipt .original {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin: 0 30rpx;
  font-size: 32rpx;
  color: #333333;
  padding-top:48rpx;
  padding-bottom:28rpx;
}
.receipt .original .oranges {
  padding-left: 10rpx;
}
.receipt .total {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin: 0 30rpx;
  padding-bottom: 48rpx;
  border-bottom:1rpx dashed #333333;
}
.receipt .total .all {
  font-size: 36rpx;
  color: #333333;
}
.receipt .total .main {
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #000000;
  padding-left: 16rpx;
}
.receipt .address {
  padding-top: 60rpx;
  margin: 0 30rpx;
}
.receipt .address:last-child {
  padding-bottom: 48rpx;
}
.receipt .address text {
  font-size: 32rpx;
  color: #000000;
  width: 100%;
  display: block;
}