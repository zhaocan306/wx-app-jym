/* 搜索栏 */
.search-list {
  width: 686rpx;
  line-height: 72rpx;
  height: 72rpx;
  background: rgba(142,142,147,0.12);
  font-size: 28rpx;
  color: #8E8E93;
  letter-spacing: -0.34px;
  display: flex;
  align-items: center;
  margin: 12rpx 32rpx 24rpx 32rpx;
  border-radius: 12rpx;
}
.search-list .searchcion {
  width: 28rpx;
  height: 28rpx;
  margin-left: 16rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}
.search-list input {
  width: 100%;
  margin-right: 16rpx;
}
/* 左边导航栏 */
.VerticalNav {
  display: flex;
  position: fixed;
  height: 100%;
  width: 100%;
  margin-top: 100rpx;
}
.VerticalNav .item-list {
  width: 170rpx;
  background: #F8F8F8;
  white-space:initial;
}
.item-list .item {
  width: 100%;
  margin: 0;
  border: none;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-list .item .well {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.item-list .active {
  background: #fff;
  color: #000000;
}
/* 商品列表顶部栏 */
.shop-title {
  position:fixed;
  width:calc(100% - 170rpx);
  height:88rpx;
  left:139rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:26rpx;
  color:#8F8E93;
  font-family:PingFangSC-Medium;
  box-shadow:0 -1rpx 0 0 rgba(0,0,0,0.06);
}
.shop-title .well {
  padding-left: 30rpx;
}
.shop-title .footer {
  padding-right: 30rpx;
  display: flex;
  align-items: center;
}
.shop-title .footer .range {
  padding-right: 60rpx;
}
.shop-title .footer .slot {
  width: 24rpx;
  height: 32rpx;
}
/* 商品选择列表 */
.VerticalNav .goods {
  padding-top: 88rpx;
  padding-bottom:325rpx;
  position: relative;
}
.goods .goods-nav {
  padding:0 30rpx 0 40rpx;
}
.goods-nav .goods-list {
  width: 100%;
  height: 194rpx;
  margin-top: 24rpx;
  margin-bottom: 60rpx;
  display: flex;
}
.goods-list image {
  width: 194rpx;
  height: 194rpx;
  box-shadow:0 0 24rpx 2rpx rgba(0,0,0,0.04);
  border-radius: 12rpx;
}
.goods-list .goods-item {
  width:calc(100% - 170rpx);
  padding-left: 16rpx;
}
.goods-name {
  font-size:28rpx;
  font-weight:600;
  width:100%;
  font-family:PingFangSC-Medium;
  color:#000000;
  height: 80rpx;
}
.goods-item .goods-label {
  display: flex;
  padding-bottom:10rpx;
}
.goods-label .label{
  height:28rpx;
  width:94rpx;
  border-radius:4rpx;
  font-size:18rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  border: 2rpx solid #EFEFF4;
}
.goods-label .label:nth-child(2){ 
  margin:0 8rpx;
}
.goods-item .goods-value {
  font-size: 20rpx;
  color: #999999;
  display: block;
  padding-bottom: 12rpx;
}
.goods-item .goods-btn {
  display: flex;
  align-items: center;
  position: relative;
}
.goods-price {
  font-family: DINAlternate-Bold;
  font-size: 32rpx;
  color: #151515;
  letter-spacing:-7rpx;
  width:96rpx;
}
.curr {
  font-size: 24rpx!important;
  letter-spacing: -6rpx;
}
.decimal {
  font-size: 24rpx!important;
  letter-spacing: -1rpx;
}
.bg-reds {
  color: #FF0004!important;
}
.goods-btn .vip {
  width: 64rpx;
  height: 32rpx;
  margin-left: 2rpx;
}
.goods-btn .member {
  color: #FF0004!important;
  width:auto!important;
}
.goods-btn .goods-change {
  width:84rpx;
  border-radius:45rpx;
  height:36rpx;
  font-size:18rpx;
  color:#fff;
  background:#0099ff;
  display:flex;
  align-items:center;
  justify-content:center;
  margin-left: 42rpx;
}
.goods-btn .goods-tips {
  width: 36rpx;
  height: 36rpx;
  color: #fff;
  background: red;
  border-radius: 50%;
  font-size: 26rpx;
  text-align: center;
  position:absolute;
  right:10rpx;
  bottom:28rpx;
}
.goods-btn .goods-option {
  display:flex;
  align-items:center;
}
.goods-option image {
  width: 50rpx;
  height: 50rpx;
}
.goods-option text {
  padding: 0 10rpx;
}
/* 下面的结算弹窗 */
.cart {
  width:690rpx;
  height:104rpx;
  background:#fff;
  position:fixed;
  left: 50%;
  margin-left: -345rpx;
  bottom:0;
  z-index: 1025;
  display:flex;
  align-items:center;
  justify-content: space-between;
  border-radius: 52rpx;
  background: #3D3D3F;
}
.cart image {
  width: 180rpx;
  height: 180rpx;
  margin-top: -45rpx;
  margin-left: 15rpx;
}
.cart .cart-tip {
  display: flex;
  flex-direction: column;
  margin-right: 126rpx;
  color: #FFFFFF;
}
.cart-tip .title {
  font-size:32rpx;
  font-family: PingFangSC-Medium;
  opacity: 0.4;
  line-height: 44rpx;
}
.cart-tip .item {
  opacity: 0.3;
  font-size: 20rpx;
  line-height: 28rpx;
}
.cart .cart-btn {
  width:200rpx;
  height:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:0 52rpx 52rpx 0;
  background:#696969;
  color: #FFFFFF;
  opacity: 0.7;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
}
.cart .success {
  background:linear-gradient(to right, #0099FF, #3642FF)!important;
  color: #fff!important;
  opacity: 1!important;
}
/* 购物车 */
.hide{
  display: none;
}
.car-detail{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1024;
  left: 0;
  bottom: 0;
}
.car-detail .mask {
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.5);
}
.car-detail .car-list {
  width: 100%;
  height: 724rpx;
  position: absolute;
  overflow-y: auto;
  left: 0;
  bottom: -724rpx;
  z-index: 1024;
  background: #fff;
  transition: .5s all;
}
.car-detail .car-list .car-tips {
  height: 52rpx;
  background: #0099FF;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: rgba(255,255,255,0.80);
  display: flex;
  align-items: center;
  justify-content: center;
}
.car-detail .translate-y{
  bottom: 0rpx;
}
.car-detail .car-list .title {
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow:0 1rpx 0 0 #EFEFF4;
  padding: 0 30rpx;
}
.title .name {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  font-weight:600;
} 
.title .clean {
  display: flex;
  align-items: center;
  justify-content: center;
}
.title image {
  width: 48rpx;
  height: 48rpx;
}
.title .clean text {
  font-size: 24rpx;
  color: #333333;
} 
.car-detail .car-list .content {
  height: 184rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
}
.car-detail .car-list .content .goods-img {
  width: 120rpx;
  height: 120rpx;
}
.car-detail .car-list .content .goods-list {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 24rpx;
  border-bottom:2rpx solid #EFEFF4;
  position:relative;
}
.goods-list .name {
  line-height: 44rpx;
  height: 44rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}
.goods-list .car-btn {
  display:flex;
  align-items:center;
  position:absolute;
  bottom:24rpx;
  right:0;
}
.car-btn image {
  width: 48rpx;
  height: 48rpx;
}
.car-btn .text {
  font-size: 32rpx;
  color: #2E2E2E;
  width: 20rpx;
  padding: 0 16rpx;
}
.car-footer {
  height: 38rpx;
  margin: 12rpx 46rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.car-footer .text {
  font-size: 32rpx;
  color: #333333;
}
.car-footer .range {
  width: auto!important;
}