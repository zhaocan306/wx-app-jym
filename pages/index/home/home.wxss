@import '/styles/common.wxss';
@import '/styles/animation.wxss';
.nav-range {
  position:absolute;
  left:30rpx;
}
/* 标题 */
.home-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 30rpx 10rpx 30rpx;
}
.home-title .title {
  transform: translateX(0);
  animation: scale-left 1s;
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #333333;
}
/* 地址栏 */
.home-address {
  display: flex;
  animation: scale-left 1s;
  align-items: center;
  margin: 0 30rpx;
  padding-bottom:22rpx;
}
.home-address .address {
  padding-left: 10rpx;
  font-size: 24rpx;
  color: #8F8E93;
}
/* 优惠活动 */
.active {
  padding-top: 32rpx;
  margin: 0 30rpx;
  padding-bottom: 32rpx;
}
.la-name {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.active image {
  margin-top: 12rpx;
  height: 400rpx;
  width: 100%;
  border-radius: 12rpx;
}
/* 服务总览 */
.service {
  padding-bottom: 130rpx;
}
.service .range {
  display: block;
  padding-left: 30rpx;
  padding-bottom: 12rpx;
}
.service .card {
  height: 104rpx;
  width: 100%;
  padding: 32rpx 30rpx;
  background: rgba(0,0,0,0.02);
  box-shadow: 0 1rpx 0 0 rgba(0,0,0,0.04);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.service .card .introduce {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}
.service .card image {
  width: 24rpx;
  height: 24rpx;
  transition: all .2s;
}
.service .card .introduce-show {
  transform: rotate(90deg);
}
.service .content {
  padding: 10rpx 30rpx;
  height: auto;
  font-size: 26rpx;
  color: #8F8E93;
  animation: slide-top 0.3s;
}