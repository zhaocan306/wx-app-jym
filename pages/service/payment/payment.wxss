/* pages/service/playment/playment.wxss */ 
.payment {
  position: relative;
  width: 100%;
  height: 100%;
}
.payment .bg-payment {
  width: 100%;
  height: 512rpx;
  position: absolute;
}
.payment .cu-payment {
  position: absolute;
  margin-top: 48rpx;
  margin-left: 30rpx;
}
.payment .cu-payment .title {
  color: #fff;
  font-size: 64rpx;
  font-family: PingFangSC-Medium;
}
.payment .cu-payment .card {
  width: 690rpx;
  height: 878rpx;
  background: #fff;
  box-shadow: 0 1px 12px 0 rgba(37,93,255,0.10);
  border-radius: 16rpx;
  margin-top: 60rpx;
}
.payment .cu-payment .card .form-group {
  height: 132rpx;
  box-shadow:0 1rpx 0 0 rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  margin-left: 36rpx;
  margin-right: 48rpx;
}
.payment .cu-payment .card .form-group image {
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box
}
.payment .cu-payment .card .form-group .content {
  display:flex;
  flex-direction:column;
  margin-left: 40rpx;
}
.payment .cu-payment .card .form-group .arrow {
  font-size: 40rpx;
  color: #cccccc;
  position:absolute;
  right:34rpx;
}
.payment .cu-payment .card .form-group .content .label {
  font-size: 26rpx;
  color: #8F8E93;
  margin-bottom:5rpx;
}
.payment .cu-payment .card .form-group .content .name {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  font-weight:600;
  color: #333333;
}
.payment .cu-payment .card .form-footer {
  margin-top: 60rpx;
}
.payment .cu-payment .card .form-footer .form-btn {
  width: 466rpx;
  height: 90rpx;
  background: linear-gradient(to right, #0099FF, #3642FF);
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing:1rpx;
}