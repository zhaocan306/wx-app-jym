<!-- 自定义顶部栏 -->
<navbar isBack="{{true}}" bgColor="bg-back"><view slot="content" class='text-white'>立即缴费</view></navbar>

<view class='payment'>
  <!-- 背景图 -->
  <image class='bg-payment' src='/images/svg/img_pay.jpg'></image>
  <view class='cu-payment' style='top:{{CustomBar}}px;'>
    <text class='title'>{{title}}</text>
    <view class='card'>
      <view class='form-group'>
        <image src='/images/svg/icon_service_company.svg'></image>
        <view class='content'>
          <text class='label'>缴费单位</text>
          <text class='name'>维也纳国际酒店</text>
        </view>
        <text class='cuIcon-right arrow'></text> 
      </view>
      <view class='form-group'>
        <image src='/images/svg/icon_service_home.svg'></image>
        <view class='content'>
          <text class='label'>户号</text>
          <text class='name'>12345</text>
        </view>
      </view>
      <view class='form-group'>
        <image src='/images/svg/icon_service_name.svg'></image>
        <view class='content'>
          <text class='label'>用户名</text>
          <text class='name'>家有马</text>
        </view>
      </view>
      <view class='form-group'>
        <image src='/images/svg/icon_service_address.svg'></image>
        <view class='content'>
          <text class='label'>住址</text>
          <text class='name'>德思勤广场A7栋1207</text>
        </view>
      </view>
      <view class='form-group'>
        <image src='/images/svg/icon_service_money.svg'></image>
        <view class='content'>
          <text class='label'>金额</text>
          <text class='name'>￥268</text>
        </view>
      </view>
      <view class='form-footer'>
        <button class="footer-btn">立即缴费</button>
      </view>
    </view>
  </view>
</view>
