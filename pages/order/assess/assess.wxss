/* pages/order/assess/assess.wxss */
page {
  background:#FCFCFC;
}
.assess {
  position: relative;
  height: 100%;
  width: 100%;
  padding-bottom: 100%;
  padding: 12rpx 30rpx 0 30rpx;
}
.assess .content {
  height: 550rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}
.assess .content .assess-textarea {
  color:#999999;
  font-size:28rpx;
}
.assess .content textarea {
  width: 100%;
  height: 454rpx;
  padding: 32rpx 30rpx;
  border-bottom:4rpx solid #EEEEEE;
}
.assess .content .name {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 2rpx;
}
.assess .assess-item {
  height: 510rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding: 32rpx 30rpx;
}
.assess .assess-item .title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  padding-bottom: 36rpx;
}
.assess .assess-item .item {
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 36rpx;
}
.assess .assess-item .item .name {
  font-size: 28rpx;
  color: #333333;
}
.assess .assess-item .item .star {
  display: flex;
  align-items: center;
}
.item .star image {
  width: 40rpx;
  height: 40rpx;
}
.assess .assess-item .item .tip{
  width:95rpx;
  font-size: 24rpx;
  color: #8F8E93;
}
.assess .assess-item .btn {
  width:160rpx;
  height:70rpx;
  background:#3276FC;
  border-radius:12rpx;
  font-size:26rpx;
  color:#FFFFFF;
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  float:right;
  margin-top:36rpx;
}