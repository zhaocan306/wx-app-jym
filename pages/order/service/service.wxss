/* pages/order/service/service.wxss */
.service {
  position: relative;
  height: 100%;
  width: 100%;
}
.service .bg-service {
  height: 512rpx;
  width: 100%;
  position: absolute;
}
.service .cu-service {
  position: absolute;
  width: 690rpx;
  background: #fff;
  margin-top: 196rpx;
  margin-left: 30rpx;
  padding: 12rpx 32rpx 0 32rpx;
  box-shadow: 0 2rpx 24rpx 0 rgba(37,93,255,0.10);
  border-radius: 16rpx;
}
.service .cu-service .form-group {
  padding-bottom: 36rpx;
  box-shadow: 0 1rpx 0 0 rgba(0,0,0,0.06);
}
.service .cu-service .range {
  padding-bottom: 36rpx;
  box-shadow: 0 0 0 0 rgba(0,0,0,0.06)!important;
}
.cu-service .form-group .title {
  font-size: 26rpx;
  color: #8F8E93;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
}
.cu-service .form-group .address {
  display:flex;
  align-items:center;
  position:relative;
}
.cu-service .form-group .form-address {
  width:100%;
  padding-right:60rpx!important;
}
.cu-service .form-group .form-input {
  height:64rpx;
  background:#F8F8F8;
  padding:0 24rpx;
  line-height:64rpx;
  display:flex;
  align-items:center;
  font-size:32rpx;
  color:#000000;
  border-radius: 12rpx;
}
.cu-service .form-group .arrow {
  width: 48rpx;
  height: 48rpx;
  position:absolute;
  right:12rpx;
}
.cu-service .form-footer {
  margin-top: 32rpx;
  margin-bottom: 60rpx;
}
.cu-service .form-footer .form-btn {
  width: 466rpx;
  height: 90rpx;
  background: linear-gradient(to right, #0099FF, #3642FF);
  border-radius: 12rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}