/* pages/message/approve-validation/approve-validation.wxss */
.validation {
  position: relative;
  height: 100%;
  margin: 0 30rpx;
}
.validation .title {
  display: flex;
  flex-direction: column;
  padding-top: 24rpx;
  padding-bottom: 12rpx;
}
.validation .name {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
}
.validation .tip {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #999999;
}
.validation .list {
  line-height: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.validation .la-name {
  width: 146rpx;
  display: inline-block;
  font-size: 36rpx;
  color: #000000;
}
.validation .input {
  height: 120rpx;
  line-height: 120rpx;
  width: calc(100% - 146rpx);
  display: flex;
  align-content: center;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 0 0 rgba(0,0,0,0.10);
}
.validation .input-number {
  height: 100%;
  width: 100%;
  font-size: 32rpx;
  color: #000000;
}
.validation .picker {
  font-size: 32rpx;
  color: #C7C7CC;
}
.validation .camera {
  flex-direction: column;
  display: flex;
  margin-top: 46rpx;
}
.validation .upload {
  height: 180rpx;
  line-height: 180rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.validation .card {
  width: 178rpx;
  height: 180rpx;
  background: #F8F8F8;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.validation .card:last-child {
  margin-left: 84rpx;
}
.validation image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 25rpx;
}
.validation .card-name {
  display: inline-block;
  height: 28rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #000000;
}
.validation .footer {
  margin-top: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.validation .btn {
  width: 466rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(to right, #0099FF, #3642FF);
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}