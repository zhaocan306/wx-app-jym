/* 地址列表 */
.address {
  position: fixed;
  height: calc(100% - 120rpx);
  padding-top: 24rpx;
  padding-bottom:120rpx;
}
.address .address-list {
  height: 160rpx;
  line-height: 80rpx;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #E6E5EB;
  padding-top: 34rpx;
}
.address-list .address-content {
  display: flex;
  flex-direction: column;
}
.address-list .detail {
  display: flex;
  align-items: center;
  line-height:44rpx;
  height:44rpx;
}
.address-list .name {
  font-size: 32rpx;
  color: #000000;
}
.address-list .text {
  font-size: 32rpx;
  color: #999999;
}
.address-list .range {
  padding: 0 24rpx;
}
.address-list .road {
  display: block;
  width: 500rpx;
  height: 34rpx;
  line-height: 34rpx;
  padding-top: 14rpx;
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: clip;
  white-space: nowrap;
}
.address-list .address-option {
  display: flex;
}
.address-option image {
  width: 48rpx;
  height: 48rpx;
}
.address-option .img-range {
  margin-left: 40rpx;
}
/* 地址新增按钮 */
.add {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EFEFF4;
  position: absolute;
  bottom: 0;
}
.add image {
  width: 48rpx;
  height: 48rpx;
}
.add .name {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #0099FF;
  padding-left: 24rpx;
}