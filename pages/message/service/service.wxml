        </view>
      </view>
    </view>
    <view class='footer'>
      <view class='title'>
        <image src='/images/svg/ico_tuikuang.svg'></image>
        <text class='tip'>售后处理中</text>
      </view>
      <view class='btn call' bindtap='toPhone'>拨打客服电话</view>
    </view>
  </view>
