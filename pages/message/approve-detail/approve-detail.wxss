/* pages/message/approve-detail/approve-detail.wxss */
.list {
  position: relative;
  height: 100%;
}
.list .item {
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx;
  background: #fff;
  margin-bottom:2rpx;
}
.list .item:not(:nth-child(3)) {
  box-shadow: 0 2rpx 0 0 rgba(0,0,0,0.10);
}
.list .item:nth-child(3) {
  margin: 0;
  padding: 0 30rpx;
  height: 147rpx;
  line-height: 147rpx;
  border-bottom: 24rpx solid #F8F8F8;
}
.list .name {
  font-size: 36rpx;
  color: #000000;
}
.list .tip {
  font-size: 32rpx;
  color: #000000;
}