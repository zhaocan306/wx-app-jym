/* pages/message/edit-phone/edit-phone.wxss */
page {
  background: #F8F8F8;
}
.edite-phone {
  position: relative;
  width: 100%;
}
.title {
  height: 114rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 24rpx;
}
.title .name {
  font-size: 40rpx;
  color: #000000;
}
.phone-content {
  background: #fff;
}
.phone-content .item {
  height: 120rpx;
  line-height: 120rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.phone-content .border {
  margin-bottom: 2rpx;
  box-shadow: 0 1px 0 0 rgba(0,0,0,0.10);
}
.phone-content .item .phone-title {
  width: 144rpx;
  display: inline-block;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
}
.phone-content .item .phone-number {
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  flex: 1;
}
.phone-content .item .phone-code {
  color: #C8C7CD;
  width: 160rpx;
  font-size: 28rpx;
}
.phone-content .item .review-code {
  color: #0099FF;
  width: 180rpx;
  font-size: 28rpx;
}
.range {
  padding-left: 144rpx;
}
.clearImgShow {
  width: 35rpx;
  height: 35rpx;
  vertical-align: center;
}
.clearImgHide {
  display: none;
}
/* 按钮 */
.footer {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 182rpx;
}
.footer .btn {
  width: 466rpx;
  height: 90rpx;
  background: linear-gradient(to right, #0099FF, #3642FF);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 15px;
  border-radius: 12rpx;
}