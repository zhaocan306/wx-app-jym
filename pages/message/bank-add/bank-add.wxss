/* pages/message/bank-add/bank-add.wxss */
.add {
  position: relative;
  height: 100%;
  margin: 0 30rpx;
}
.add .title {
  display: flex;
  flex-direction: column;
  padding-top: 24rpx;
  padding-bottom: 12rpx;
}
.add .name {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
}
.add .tip {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #999999;
}
.add .list {
  line-height: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.add .la-name {
  width: 146rpx;
  display: inline-block;
  font-size: 36rpx;
  color: #000000;
}
.add .input {
  height: 120rpx;
  line-height: 120rpx;
  width: calc(100% - 146rpx);
  display: flex;
  align-content: center;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 0 0 rgba(0,0,0,0.10);
}
.add .input-number {
  height: 100%;
  width: 100%;
  font-size: 32rpx;
  color: #000000;
}
.add .footer {
  margin-top: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add .btn {
  width: 466rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(to right, #0099FF, #3642FF);
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}